<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.twormobile.mytravelasia"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-sdk android:minSdkVersion="14"
              android:targetSdkVersion="18"/>

    <application
            android:label="@string/app_name"
            android:debuggable="true"
            android:icon="@drawable/ic_launcher">
        <activity
                android:name=".SplashActivity"
                android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".StartUpActivity"
                  android:theme="@android:style/Theme.Holo.NoActionBar"
                  android:label="@string/lbl_mytravel_ph"/>
        <activity android:name=".MainActivity"
                  android:theme="@style/Theme.Mtaph">
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/search_poi"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>

        <provider android:authorities="com.twormobile.mytravelasia.db.MtaPhProvider"
                  android:name="com.twormobile.mytravelasia.db.MtaPhProvider"
                  android:exported="false"
                  android:multiprocess="true" />
        <service android:name=".http.FeedListIntentService"
                 android:label="FeedListIntentService"/>
        <service android:name=".http.FeedDetailIntentService"
                 android:label="FeedDetailIntentService"/>
    </application>
</manifest>
