<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Themes -->
    <style name="FullscreenTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Styles -->
    <style name="LayoutMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutWrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutWrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SplashText" parent="LayoutWrapWrap">
        <item name="android:textSize">@dimen/splash_lbl_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StartUpButton" parent="LayoutWrapWrap">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="StartUpHeader" parent="LayoutMatchWrap">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/startup_hdr_padding_top</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="StartUpTitleBar" parent="LayoutMatchWrap">
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/black</item>
    </style>
</resources>